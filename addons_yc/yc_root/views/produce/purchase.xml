<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--css-->
        <template id="assets_backend" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link href="/yc_root/static/src/css/cssfile.css" rel="stylesheet"/>
            </xpath>
        </template>

        <!-- view of purchase tree -->
        <record model="ir.ui.view" id="purchase_tree">
            <field name="name">purchase.tree</field>
            <field name="model">yc.purchase</field>
            <field name="arch" type="xml">
                <tree string="Purchase tree">
                    <field name="name"/>
                    <field name="day"/>
                    <field name="time"/>
                    <field name="car_no"/>
                    <field name="state"/>
                    <field name="weighstate"/>
                    <field name="checkstate"/>
                </tree>
            </field>
        </record>

        <!-- view of purchase form-->
        <record model="ir.ui.view" id="purchase_form">
            <field name="name">purchase.form</field>
            <field name="model">yc.purchase</field>
            <field name="arch" type="xml">
                <form string="Purchase form">
                    <sheet>
                        <notebook>
                            <page string="基本資料">
                                <group string="進貨資訊" col="6" class="o1">
                                    <field name="name" readonly="1"/>
                                    <newline/>
                                    <field name="day" colspan="3"/>
                                    <field name="create_date" attrs="{'readonly': True }" string="製表日期" colspan="3"/>
                                    <field name="time"/>
                                    <field name="factory_id"/>
                                    <field name="pre_order"/>
                                    <field name="car_no"/>
                                    <field name="driver_id"/>
                                    <field name="person"/>
                                    <field name="processing_attache"/>
                                    <field name="customer_id"/>
                                    <field name="processing_phone" placeholder="前加電話"/>
                                    <field name="processing_contact"/>
                                    <field name="batch"/>
                                    <!--<seperate>客戶單號</seperate>-->
                                </group>
                                <group string="規格明細" col="6" class="o1">
                                    <field name="clsf_code"/>
                                    <field name="product_code"/>
                                    <field name="strength_level"/>
                                    <field name="txtur_code"/>
                                    <field name="norm_code"/>
                                    <field name="len_code"/>
                                    <field name="len_descript"/>
                                    <field name="proces_code"/>
                                    <field name="surface_code"/>
                                    <field name="elecpl_code"/>
                                    <field name="portage"/>
                                    <field name="num1"/>
                                    <field name="unit1">單位1</field>
                                    <field name="num2">數量2</field>
                                    <field name="unit2">單位2</field>
                                    <field name="num3">數量3</field>
                                    <field name="unit3">單位3</field>
                                    <field name="num4">數量4</field>
                                    <field name="unit4">單位4</field>
                                    <field name="storeplace">存放位置</field>
                                    <field name="net"/>
                                    <field name="process1"/>
                                    <field name="totalpack"/>
                                    <field name="process2"/>
                                    <field name="standard"/>
                                    <field name="wire_furn"/>
                                    <field name="fullorhalf"/>
                                    <!--<field name="state"/>-->
                                    <!--<field name="weighstate"/>-->
                                    <!--<field name="checkstate"/>-->
                                    <!--<field name="customer_phone"/>-->
                                    <!--<field name="customer_contact"/>-->
                                    <!--<field name="customer_no"/>-->
                                </group>

                                <group string="其他" col="8">
                                    <field name="surfhrd"/>
                                    <field name="corehrd"/>
                                    <field name="piece" widget="radio"/>
                                    <field name="norcls"/>
                                    <field name="tensihrd"/>
                                    <field name="carburlayer"/>
                                    <field name="pre_furn"/>
                                    <field name="wxr_txtur"/>
                                    <field name="torsion"/>
                                    <field name="retempt"/>
                                    <field name="order_furn"/>
                                    <field name="wxrhard"/>
                                </group>
                                <group col="2">
                                    <field name="notices1"/>
                                    <field name="notices2"/>
                                    <field name="notices3"/>
                                    <field name="notices4"/>
                                    <field name="qcnote1"/>
                                    <field name="qcnote2"/>
                                    <field name="qcnote3"/>
                                    <field name="prodnote1"/>
                                    <field name="prodnote2"/>
                                    <field name="prodnote3"/>
                                </group>
                            </page>

                            <page string="作業條件">
                                <group col="6">
                                    <field name="flow"/>
                                    <field name="cp"/>
                                    <field name="nh31"/>
                                    <field name="nh32"/>
                                    <field name="nh33"/>
                                    <field name="nh34"/>
                                    <field name="heat1"/>
                                    <field name="heat2"/>
                                    <field name="heat3"/>
                                    <field name="heat4"/>
                                    <field name="heat5"/>
                                    <field name="heat6"/>
                                    <field name="heat7"/>
                                    <field name="heat8"/>
                                    <field name="heattemp"/>
                                    <field name="heatsped"/>
                                    <field name="tempturing1"/>
                                    <field name="tempturing2"/>
                                    <field name="tempturing3"/>
                                    <field name="tempturing4"/>
                                    <field name="tempturing5"/>
                                    <field name="tempturing6"/>
                                    <field name="tempturisped"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- action -->
        <record model="ir.actions.act_window" id="purchase_list_action">
            <field name="name">進貨單作業</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">yc.purchase</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window.view" id="purchase_list_action_form">
            <field name="act_window_id" ref="purchase_list_action"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="purchase_list_action_tree">
            <field name="act_window_id" ref="purchase_list_action"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="purchase_tree"/>
        </record>


    </data>
</odoo>